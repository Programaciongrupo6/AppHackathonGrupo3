<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VolcanApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarillo_claro</item>
        <item name="colorPrimaryVariant">@color/amarillo_ocre</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cafe_claro</item>
        <item name="colorSecondaryVariant">@color/cafe_oscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/verde_oscuro</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeNoBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
